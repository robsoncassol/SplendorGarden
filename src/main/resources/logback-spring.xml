<?xml version="1.0" encoding="UTF-8"?>
<configuration>


  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
   <encoder>
      <pattern>%logger{15} - %message%n%xException{5}</pattern>
    </encoder>
  </appender>

  <logger name="com.cassol" level="INFO" />

  <root level="ERROR">
    <appender-ref ref="STDOUT" />
  </root>

</configuration>